{
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "optimize-autoloader": true
  },
  "require": {
    "php": "^7.1",
    "symfony/http-foundation": "^4.1",
    "symfony/http-kernel": "^4.1",
    "symfony/routing": "^4.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S 0.0.0.0:8080 -t public public/front.php",
    "test": "phpunit --colors=always"
  }
}
